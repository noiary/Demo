<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313335">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_behavior=".MyBehavior"
        tools:context="com.maodq.demo.MainActivity">

        <Button
            android:id="@+id/btn_behavior"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="@string/behavior"/>

        <Button
            android:id="@+id/btn_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="@string/appbar_layout"/>

        <Button
            android:id="@+id/btn_bottom_sheet_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="@string/bottom_sheet_dialog"/>

        <!--<Button-->
            <!--android:id="@+id/btn_fragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/btn_height"-->
            <!--android:text="fragment"/>-->

        <Button
            android:id="@+id/btn_handler_demo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="handlerdemo"/>

        <Button
            android:id="@+id/btn_event"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="event"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>